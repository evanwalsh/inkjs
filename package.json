{
  "name": "inkjs",
  "version": "2.0.0",
  "description": "A javascript port of inkle's ink scripting language (http://www.inklestudios.com/ink/)",
  "main": "dist/ink-es2015.js",
  "types": "ink.d.ts",
  "scripts": {
    "test": "npm run test:typescript && npm run test:javascript",
    "test:typescript": "jest",
    "test:javascript": "npm run test:javascript:dist && npm run test:javascript:legacy",
    "test:javascript:dist": "cross-env INK_TEST=dist jest",
    "test:javascript:legacy": "cross-env INK_TEST=legacy jest",
    "test:compileFiles": "node src/tests/compile.js",
    "pretest:javascript": "npm run build && npm run test:compileFiles",
    "build": "tsc -p ./ && rollup -c",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "watch": "tsc -p ./ && rollup -c -w",
    "prepare": "npm run build"
  },
  "author": "Yannick Lohse",
  "license": "MIT",
  "browserslist": "> 0.25%, not dead",
  "devDependencies": {
    "@babel/core": "7.16.12",
    "@babel/preset-env": "7.16.11",
    "@types/jest": "27.4.1",
    "@typescript-eslint/eslint-plugin": "5.16.0",
    "@typescript-eslint/parser": "5.16.0",
    "cross-env": "^7.0.3",
    "eslint": "8.12.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jsdoc": "38.0.7",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-prettier": "4.0.0",
    "fs-extra": "9.1.0",
    "glob": "7.2.0",
    "jest": "27.5.1",
    "prettier": "2.6.1",
    "remap-istanbul": "0.13.0",
    "rollup": "2.66.1",
    "@rollup/plugin-babel": "5.3.1",
    "@rollup/plugin-node-resolve": "13.1.3",
    "rollup-plugin-sourcemaps": "0.6.3",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-typescript2": "0.31.2",
    "ts-jest": "27.1.4",
    "typescript": "4.6.3"
  }
}
